---
interface Props {
  company: string;
  role: string;
  period: string;
  description: string[];
}
const { company, role, period, description } = Astro.props;
---
<div class="experience-item">
  <h4>{role} @ {company}</h4>
  <p class="period">{period}</p>
  <ul>
    {description.map(item => <li>{item}</li>)}
  </ul>
</div>

<style>
  .experience-item {
    margin-bottom: 1.5rem;
  }
  .experience-item h4 {
    margin: 0 0 0.25rem 0;
    font-size: 1.1rem;
    color: #333;
  }
  .experience-item .period {
    font-size: 0.9rem;
    color: #777;
    margin-bottom: 0.5rem;
  }
  .experience-item ul {
    list-style: disc;
    padding-left: 1.2rem;
    margin: 0;
  }
  .experience-item li {
    margin-bottom: 0.3rem;
    line-height: 1.6;
  }
</style>