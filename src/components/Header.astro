---
import { profile } from '../data/resumeData';
---
<header class="resume-header">
  {profile.avatar && <img src={profile.avatar} alt={profile.name} class="avatar" />}
  <div>
    <h1>{profile.name}</h1>
    <h2>{profile.title}</h2>
    <div class="contact-info">
      {profile.email && <p><a href={`mailto:${profile.email}`}>{profile.email}</a></p>}
      {profile.phone && <p>{profile.phone}</p>}
      {profile.linkedin && <p><a href={`https://${profile.linkedin}`} target="_blank" rel="noopener noreferrer">LinkedIn</a></p>}
      {profile.github && <p><a href={`https://${profile.github}`} target="_blank" rel="noopener noreferrer">GitHub</a></p>}
      {profile.website && <p><a href={`https://${profile.website}`} target="_blank" rel="noopener noreferrer">个人网站</a></p>}
    </div>
  </div>
</header>

<style>
  .resume-header {
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #eee;
  }
  .avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
  }
  .resume-header h1 {
    margin: 0 0 0.25rem 0;
    font-size: 2.2rem;
    color: #333;
  }
  .resume-header h2 {
    margin: 0 0 0.75rem 0;
    font-size: 1.2rem;
    font-weight: normal;
    color: #555;
  }
  .contact-info p {
    margin: 0.25rem 0;
    font-size: 0.9rem;
  }
  .contact-info a {
    color: #007bff;
    text-decoration: none;
  }
  .contact-info a:hover {
    text-decoration: underline;
  }
   @media (max-width: 600px) {
    .resume-header {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }
  }
</style>