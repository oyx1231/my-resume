---
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<section class="resume-section">
  <h3>{title}</h3>
  <slot />
</section>

<style>
  .resume-section {
    margin-bottom: 2rem;
  }
  .resume-section h3 {
    font-size: 1.4rem;
    color: #444;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #ddd;
  }
</style>